<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividad2"
    android:weightSum="10"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/gama8"
    >

    <LinearLayout
        android:layout_width ="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="10"
        android:background="@color/gama7"
        >


        <Button
            android:id="@+id/best"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Best: \n0"
            android:layout_margin="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2048"
            android:textSize="50sp"
            android:layout_weight="2"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/FFFFFF"
            android:textColorHighlight="@color/gama10"
            />


        <Button
            android:id="@+id/score"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="SCORE\n0"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Join the numbers and get to: "
            android:textSize="23dp"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/FFFFFF"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2048"
            android:fontFamily="cursive"
            android:textSize="24dp"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/FFFFFF"
            />


    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        >

        <TextView
            android:id="@+id/gameOver"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GAME-OVER"
            android:textSize="60dp"
            android:gravity="center"
            android:elevation="8dp"
            android:visibility="invisible"

            />

        <GridLayout
            android:id="@+id/Layout"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:columnOrderPreserved="true"
            android:rowCount="4"
            android:padding="10dp"
            android:visibility="visible"
            android:background="@color/gama10"
            >

            <!--Row 0 -->
            <Button
                android:id="@+id/game_0_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/color2Btn"
                android:text="2"
                android:textSize="30dp"

                />

            <Button
                android:id="@+id/game_0_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/color4Btn"
                android:text="2"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/game_0_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/color8Btn"
                android:text="2"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/game_0_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/color16Btn"
                android:text="2"
                android:textSize="30dp"
                />

            <!--Row 1 -->
            <Button
                android:id="@+id/game_1_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/color32Btn"
                android:text="2"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/game_1_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/color64Btn"
                android:text="2"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/game_1_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/color128Btn"
                android:text="2"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/game_1_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/color256Btn"
                android:text="2"
                android:textSize="30dp"
                />

            <!--Row 2 -->
            <Button
                android:id="@+id/game_2_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/color512Btn"
                android:text="2"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/game_2_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/color1024Btn"
                android:text="2"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/game_2_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/color2048Btn"
                android:text="2"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/game_2_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/FFFFFF"
                android:text="2"
                android:textSize="30dp"
                />

            <!--Row 3 -->
            <Button
                android:id="@+id/game_3_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/FFFFFF"
                android:text="2"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/game_3_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/FFFFFF"
                android:text="2"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/game_3_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/FFFFFF"
                android:text="2"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/game_3_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@color/FFFFFF"
                android:text="2"
                android:textSize="30dp"
                />

        </GridLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/restart"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="         RESTART"
            android:textSize="25dp"
            android:textAlignment="textStart"
            android:layout_weight="2"
            android:background="@color/gama7"
            android:textColor="@color/FFFFFF"
            android:fontFamily="monospace"


            />

    </LinearLayout>

</LinearLayout>



